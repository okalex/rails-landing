.container
  .row
    .col-md-12
      - if flash[:notice]
        %p.notice= flash[:notice]
      - if flash[:error]
        %p.error= flash[:error]

  .row
    = simple_form_for @signup, html: {class: 'form-inline'} do |f|
      .col-md-4
        = f.input_field :email, placeholder: 'Email address', class: 'form-control'
      .col-md-2
        = f.submit 'Sign up!', class: 'btn btn-primary'

