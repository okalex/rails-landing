!!! 5
%html
  %head
    %title Web
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body

    %header.navbar.transparent.navbar-top(role="navigation")
      .container
        .navbar-header
          %a.navbar-brand(href="/")
            <b>AppName</b>.io

        - if user_signed_in?
          .collapse.navbar-collapse.navbar-ex1-collapse
            %ul.nav.navbar-nav.navbar-right
              %li
                = link_to "Log out", destroy_user_session_url, method: :delete
        - else
          .collapse.navbar-collapse.navbar-ex1-collapse
            %ul.nav.navbar-nav.navbar-right
              %li
                %a(href="/") Learn more
              %li
                %a(href="/") Pricing
              %li
                %a(href="/") Blog
            -#%ul.nav.navbar-nav.navbar-right
              -#%li
                -#%a(href="#{new_user_registration_path}") Sign up
              -#%li
                -#%a(href="#{new_user_session_path}") Login

    %main
      .container
        - if user_signed_in?
          - unless notice.nil?
            .notice= notice
          - unless alert.nil?
            .alert= alert
      = yield

    %footer
      .container
        %ul#footer-links.list-inline
          %li &copy; Copyright 2013, <b>AppName</b>.io
          %li
            %a(href="/") Privacy
          %li
            %a(href="/") ToS
          %li
            %a(href="/") Partners
          %li
            %a(href="#") support@appname.io
