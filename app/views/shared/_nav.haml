%header.navbar.transparent.navbar-top(role="navigation")
  .container
    .navbar-header
      %a.navbar-brand(href="/")
        <b>AppName</b>.io

    - if user_signed_in?
      .collapse.navbar-collapse.navbar-ex1-collapse
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Log out", destroy_user_session_url, method: :delete
    - else
      .collapse.navbar-collapse.navbar-ex1-collapse
        %ul.nav.navbar-nav.navbar-right
          %li
            %a(href="/") Learn more
          %li
            %a(href="/") Pricing
          %li
            %a(href="/") Blog
        -#%ul.nav.navbar-nav.navbar-right
          -#%li
            -#%a(href="#{new_user_registration_path}") Sign up
          -#%li
            -#%a(href="#{new_user_session_path}") Login
